<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2f4f2f"
    android:padding="10dp" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_refill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refill Name:   "
            android:textColor="#FFFF00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_refill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refill Name   "
            android:textColor="#ffffff"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_refill_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refill Date:   "
            android:textColor="#FFFF00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_refill_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refill Date     "
            android:textColor="#ffffff"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_refill_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refill Time: "
            android:textColor="#FFFF00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_refill_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refill Time"
            android:textColor="#ffffff"
            android:textStyle="italic" />
    </TableRow>

</TableLayout>
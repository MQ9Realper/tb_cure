<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f4f2f"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/txtRefillName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Refill Name"
        android:textColor="#ffffff" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_refill_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Set Date"
        android:textStyle="bold"
        android:textColor="#2f4f2f" />

    <Button
        android:id="@+id/btn_refill_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Set Time"
        android:textStyle="bold"
        android:textColor="#2f4f2f" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/save_background"
        android:onClick="save"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Save Details" />

    <ListView
        android:id="@+id/refills_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:divider="#ffffff"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>
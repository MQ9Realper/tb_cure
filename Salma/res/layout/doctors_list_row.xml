<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2f4f2f"
    android:padding="10dp" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor's Name:   "
            android:textColor="#FFFF00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_doctor_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name   "
            android:textColor="#ffffff"
            android:textStyle="italic" />
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_doctor_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialty:   "
            android:textColor="#FFFF00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_doctor_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialty     "
            android:textColor="#ffffff"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_doctor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address: "
            android:textColor="#FFFF00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_doctor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="#ffffff"
            android:textStyle="italic" />
    </TableRow>

</TableLayout>